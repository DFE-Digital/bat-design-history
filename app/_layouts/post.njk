{% extends "base.njk" %}

{% from "article/macro.njk" import appArticle %}
{% from "related/macro.njk" import appRelated %}
{% from "prose/macro.njk" import appProse %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [{
      text: app.serviceName or app.productName,
      href: "/"
    }, {
      text: tags[0] | case,
      href: "/" + tags[0]
    }, {
      text: title,
      href: page.url
    }]
  }) if breadcrumbs != false }}
{% endblock %}

{% block content %}
  {% call appArticle({
    header: {
      title: title,
      description: description
    },
    footer: {
      date: date or page.date
    }
  }) %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ appProse({
        prose: content
      }) }}
    </div>

    {% if related %}
    <div class="govuk-grid-column-one-third">
      {{ appRelated({
        title: related.title or "Related links",
        items: related.items
      }) }}
    </div>
    {% endif %}
  </div>
  {% endcall %}
{% endblock %}
