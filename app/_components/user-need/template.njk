{% from "govuk/components/tag/macro.njk" import govukTag %}

<div class="app-user-need">
  {% if params.status %}
    {{ govukTag({
      classes: "app-user-need__status",
      text: params.status
    }) }}
  {% endif %}
  <p class="govuk-body">{{ params.description | nl2br | safe }}</p>
  {% if params.url %}
    <p class="govuk-body"><a class="govuk-link" href="{{ params.url | url | pretty }}">View need</a></p>
  {% endif %}
</div>
