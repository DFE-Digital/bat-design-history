{%- from "../figure/macro.njk" import appFigure with context -%}
<ul class="app-gallery{% if params.layout != false %} app-gallery--layout-{{ params.layout or "thumbnails" }}{% endif %}">
{% for item in params.items %}
  {% set id = item.id or (item.text | slug) %}
  {% set file = item.img.src or (id + ".png") %}
  {% set alt = item.img.alt or ("Screenshot of " + item.text) %}
  <li class="app-gallery__item" id="{{ id }}">
    {{ appFigure({
      image: {
        path: params.path,
        file: file,
        alt: alt
      },
      caption: item.caption or item.text
    }) }}
  </li>
{% endfor %}
</ul>
